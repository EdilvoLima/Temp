	<meta charset="utf-8">
	<script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.3.0-beta.5/angular.min.js"></script>
	<script src="js/todo.js"></script>
    </head>
    <body ng-controller="todoListCtrl">
      <h2 class="h2" align="center">Todo List</h2>
      <!--<span>{{remaining()}} of {{todos.length}} remaining</span>
	[ <a href="" ng-click="archive()">archive</a> ]-->
        <div class="CSSTableGenerator">
                <table>
			<tr>
			    <td>Open</td>
			    <td>Done</td>
			    <td>Tarefa</td>
			    <td>Data</td>
			    <td>Remover</td>
			    <td>Cima</td>
			    <td>Baixo</td>
			    <td>Testes</td>
			</tr>
                        
			
                          <tr type="1" ng-repeat="todo in todos">

                            <td width="5" align="center">
                                <span class="bultton" ng:click="todo.done = false">Open</span>
                            </td>

                            <td width="5" align="center">
                                <span class="bultton" ng:click="todo.done = true">Done</span>
                            </td>

                            <td width="2000">
                                <span class="done-{{todo.done}}">{{todo.text}}</span>
                            </td>

                            <td width="200" align="center">
                                <span class="done-{{todo.done}}">{{todo.date}}</span>
                            </td>

                            <td width="5" align="center">
				<button type="submit" class="bultton" ng-click="deleteTodo(todo.id)" onClick="window.location.reload()">Remover</button>
                            </td>

                            <td width="5" align="center">
                                <a class="bultton" ng-click = "move($index, 'up')">Up</a>
                            </td>

                            <td width="5" align="center">
                                <a align="center" class="bultton" ng-click = "move($index, 'down')">Down</a>
                            </td>
                            <td>
                                prioridade: {{$index}} / id:{{todo.id}} / tamanho:{{todos.length}}
                            </td>

                          </tr>
                </table>
        </div>

        <form action="/Todo/create" method="POST" ng-submit="addTodo()">
	  <input class="textarea" type="text" ng-model="todo_text"  size="138" placeholder="add new todo here" name="text"/>
	  <input class="textarea" type="date" ng-model="todo_date" placeholder="yyyy-MM-dd" required name="date"/>
	  <!--<input type="hidden" ng-model="todo_prioridade" name="prioridade" value="{{todos.lenght + 1}}"/> -->
	  <input class="bultton" type="submit" value="add" onClick="window.location.reload()">
	</form>

    </body>
</html>