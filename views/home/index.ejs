<!doctype html>
<html ng-app>
    <head>
	<style>
	    h2{
		font-size: 4rem;
		text-align: center;
		background-color:green;
		color:white; 
	    }
	    table, td, th{
		border:1px solid green;
	    }
	    th{
		background-color:green;
		color:white;
	    }
	</style>
	<style type="text/css">
	    <!--
	    .txtarea {
	    height: 40px;
	    font-size: 15px;
	    font-weight: bold;
	    font-color: white;
	    background-color: yellow;
	    }
	    -->
	</style>
	<meta charset="utf-8">
	<script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.3.0-beta.5/angular.min.js"></script>
	<script src="js/todo.js"></script>
    </head>
    <body>
      <h2>Todo List</h2>
      <div ng-controller="TodoCtrl">
	<span>{{remaining()}} of {{todos.length}} remaining</span>
	[ <a href="" ng-click="archive()">archive</a> ]
	<table class="table table-bordered">
	    <thead> 
		<tr>
		    <th></th>
		    <th></th>
		    <th>Tarefa</th>
		    <th>Previs√£o</th>
                    <th></th>
                    <th></th>
                    <th></th>
		</tr>
	    </thead>
	    <tbody>
		<ul class="unstyled">
		  <tr type="1" ng-repeat="todo in todos">
                    
		    <td width="5">
			<span class="button" ng:click="todo.done = false">Open</span>
		    </td>
                    
		    <td width="5">
			<span class="button" ng:click="todo.done = true">Done</span>
		    </td>
                    
		    <!-- <input type="checkbox" ng-model="todo.done"> -->
		    <td width="2000">
			<span class="done-{{todo.done}}">{{todo.text}}</span>
		    </td>
                    
		    <td width="250" align="center">
			<span class="done-{{todo.done}}">{{todo.date}}</span>
		    </td>
                    
                    <td width="250" align="center">
			<a href="" ng-click = "removeTodo($index)">Remove</a>
		    </td>
                    
                    <td width="250" align="center">
			<a href="" ng-click = "move($index, 'up')">Up</a>
		    </td>
                    
                    <td width="250" align="center">
			<a href="" ng-click = "move($index, 'down')">Down</a>
		    </td>
                    
		  </tr>
		</ul>
	    </tbody>
	</table>
	<form ng-submit="addTodo()">
	  <input class="txtarea" type="text" ng-model="todoText"  size="138"
		 placeholder="add new todo here">
	  <input class="txtarea" type="date" ng-model="todoDate" placeholder="yyyy-MM-dd" required />
	  <input class="button" type="submit" value="add">
	</form>
      </div>
    </body>
</html>